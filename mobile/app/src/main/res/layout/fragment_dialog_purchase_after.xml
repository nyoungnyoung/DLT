<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="424dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingTop="20dp"
            android:paddingEnd="18dp"
            android:paddingBottom="20dp"
            android:background="@drawable/shape_dialog_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_result_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nsr_eb"
                    android:text="결과"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>


            </LinearLayout>


            <ImageView
                android:id="@+id/iv_purchase_complete"
                android:layout_width="43dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ic_check_true" />
            <TextView
                android:id="@+id/tv_purchase_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000원"
                android:textSize="30sp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center"
                android:fontFamily="@font/nsr_eb"/>
            <TextView
                android:id="@+id/tv_complete_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nsr_b"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_after_purchase"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_violet"
                android:fontFamily="@font/nsr_eb"
                android:text="확인"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="424dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingTop="20dp"
            android:paddingEnd="18dp"
            android:paddingBottom="20dp"
            android:background="@drawable/shape_dialog_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">



            </LinearLayout>


            <ImageView
                android:id="@+id/iv_purchase_complete"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ic_check_true" />

            <TextView
                android:id="@+id/tv_purchase_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정산 완료"
                android:textSize="30sp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:fontFamily="@font/nsr_eb"/>

            <TextView
                android:id="@+id/tv_complete_message_ment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/nsr_b"
                android:gravity="center"
                android:text="금액이 부족한 참가자"
                android:textSize="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pay_participant"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="12dp"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_after_purchase"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_violet"
                android:fontFamily="@font/nsr_eb"
                android:text="확인"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</layout>
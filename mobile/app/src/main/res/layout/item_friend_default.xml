<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">


        <LinearLayout
            android:id="@+id/ll_review_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >


            <ImageView
                android:id="@+id/iv_friend_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/test_image" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_friend_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/nsr_b"
                    android:layout_marginBottom="4dp"
                    android:text="김차돌돌로"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_friend_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"

                    android:fontFamily="@font/nsr_r"
                    android:text="김차돌돌로"
                    android:textSize="12dp" />

            </LinearLayout>




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_friend_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="3dp"
                android:background="@drawable/card_rounded_detail"
                android:backgroundTint="@color/red4"
                android:text="삭제"
                android:gravity="center"
                android:textColor="@color/red1"
                android:textSize="11sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>